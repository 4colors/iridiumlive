<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">IridiumLive</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="HideNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="sats">
                <span class="oi oi-list" aria-hidden="true"></span> Satellites
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="stats">
                <span class="oi oi-bar-chart" aria-hidden="true"></span> Statistics
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="playback">
                <span class="oi oi-media-play" aria-hidden="true"></span> Playback
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="live">
                <span class="oi oi-wifi" aria-hidden="true"></span> Live
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void HideNavMenu()
    {
        collapseNavMenu = true;
    }
}
